{
  "name": "webpack-mpa-starter",
  "version": "0.1.0",
  "description": "Multi page app setup with webpack",
  "scripts": {
    "dev": "cross-env NODE_ENV=development BROWSERSLIST_ENV=modern webpack-dev-server --progress --config webpack/webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production BROWSERSLIST_ENV=modern node webpack/prod.js",
    "build:analyze": "cross-env BUNDLE_ANALYZE=true npm run build",
    "build:serve": "npm run build && serve dist -l 8080 --no-etag",
    "lint": "eslint --ext .js,.svelte .",
    "prettify": "prettier --write \"**/*.{js,json,md,scss,svelte}\"",
    "add-comp": "node add-component.js"
  },
  "keywords": [
    "webpack",
    "svelte",
    "scss",
    "svg",
    "ejs",
    "mpa",
    "multi-page"
  ],
  "author": "Ruslan Shakirov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zamanruhy/webpack-mpa-starter.git"
  },
  "bugs": {
    "url": "https://github.com/zamanruhy/webpack-mpa-starter/issues"
  },
  "homepage": "https://github.com/zamanruhy/webpack-mpa-starter",
  "dependencies": {
    "@webcomponents/custom-elements": "^1.4.2",
    "core-js": "^3.6.5",
    "custom-event-polyfill": "^1.0.7",
    "element-closest-polyfill": "^1.0.2",
    "is-connected-node": "^1.0.0-beta",
    "normalize.css": "^8.0.1",
    "svelte": "^3.29.0",
    "svgxuse": "^1.2.6",
    "swiper": "^6.3.3",
    "what-input": "^5.2.10"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/eslint-parser": "^7.11.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "autoprefixer": "^10.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.1.0",
    "chalk": "^4.1.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "ejs-loader": "^0.5.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "fibers": "^5.0.0",
    "file-loader": "^6.1.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-prettify-webpack-plugin": "^1.0.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "image-webpack-loader": "^7.0.1",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^1.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "ora": "^5.1.0",
    "portfinder": "^1.0.28",
    "postcss": "^8.1.1",
    "postcss-load-config": "^3.0.0",
    "postcss-loader": "^4.0.4",
    "postcss-pxtorem": "^5.1.1",
    "postcss-selector-replace": "^1.0.2",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "rimraf": "^3.0.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "serve": "^11.3.2",
    "style-loader": "^2.0.0",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.5.1",
    "svg-sprite-loader": "^5.0.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "terser-webpack-plugin": "^4.2.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*{.js,.md,.svelte}": "eslint --ext",
    "**/*.{js,json,md,scss,svelte}": [
      "prettier --write",
      "git add"
    ]
  }
}
