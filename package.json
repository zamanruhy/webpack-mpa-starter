{
  "name": "webpack-mpa-starter",
  "version": "0.1.0",
  "description": "Webpack starter for building multi-page websites",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config internals/webpack/webpack.config.dev.js --progress",
    "build": "cross-env NODE_ENV=production node internals/webpack/prod.js",
    "build:serve": "npm run build && serve dist -l 8080 -n -c ../internals/serve.json",
    "build:analyze": "cross-env BUNDLE_ANALYZE=true npm run build",
    "lint": "eslint --ext .js,.svelte .",
    "prettify": "prettier --write \"**/*.{js,json,md,pcss,svelte}\"",
    "add": "node internals/add-component.js"
  },
  "keywords": [
    "webpack",
    "svelte",
    "postcss",
    "svg",
    "ejs",
    "mpa",
    "multi-page"
  ],
  "author": "Ruslan Shakirov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zamanruhy/webpack-mpa-starter.git"
  },
  "bugs": {
    "url": "https://github.com/zamanruhy/webpack-mpa-starter/issues"
  },
  "homepage": "https://github.com/zamanruhy/webpack-mpa-starter",
  "dependencies": {
    "core-js": "^3.17.3",
    "svelte": "^3.42.5",
    "swiper": "^7.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.4",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/runtime": "^7.15.4",
    "autoprefixer": "^10.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.2",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-color-converter": "^2.0.0",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "ejs-loader": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "fibers": "^5.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-beautifier-webpack-plugin": "^1.0.6",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "image-webpack-loader": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.2.2",
    "ora": "^5.4.1",
    "portfinder": "^1.0.28",
    "postcss": "^8.3.6",
    "postcss-calc": "^8.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-functions": "^4.0.2",
    "postcss-import": "^14.0.2",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-load-config": "^3.1.0",
    "postcss-loader": "^6.1.1",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-pxtorem": "^6.0.0",
    "postcss-simple-vars": "^6.0.3",
    "prettier": "^2.4.0",
    "prettier-plugin-svelte": "^2.4.0",
    "rimraf": "^3.0.2",
    "serve": "^12.0.1",
    "style-loader": "^3.2.1",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.9.4",
    "svg-sprite-loader": "^6.0.9",
    "svgo": "^2.5.0",
    "svgo-loader": "^3.0.0",
    "terser-webpack-plugin": "^5.2.4",
    "webpack": "^5.52.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.0",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*{.js,.md,.svelte}": "eslint --ext",
    "**/*.{js,json,md,pcss,svelte}": [
      "prettier --write",
      "git add"
    ]
  }
}
