{
  "name": "webpack-mpa-starter",
  "version": "0.1.0",
  "description": "Webpack starter for building multi-page websites",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config internals/webpack/webpack.config.dev.js --progress",
    "build": "cross-env NODE_ENV=production node internals/webpack/prod.js",
    "build:serve": "npm run build && serve dist -l 8080 -n -c ../internals/serve.json",
    "build:analyze": "cross-env BUNDLE_ANALYZE=true npm run build",
    "lint": "eslint --ext .js,.svelte .",
    "prettify": "prettier --write \"**/*.{js,json,md,css,svelte}\"",
    "add": "node internals/add-component.js"
  },
  "keywords": [
    "webpack",
    "svelte",
    "postcss",
    "svg",
    "ejs",
    "mpa",
    "multi-page"
  ],
  "author": "Ruslan Shakirov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zamanruhy/webpack-mpa-starter.git"
  },
  "bugs": {
    "url": "https://github.com/zamanruhy/webpack-mpa-starter/issues"
  },
  "homepage": "https://github.com/zamanruhy/webpack-mpa-starter",
  "dependencies": {
    "core-js": "^3.20.0",
    "imask": "^6.4.2",
    "solid-headless": "^0.10.12",
    "solid-js": "^1.3.4",
    "solid-transition-group": "0.0.8",
    "svelte": "^3.44.3",
    "swiper": "^7.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/runtime": "^7.16.5",
    "@unocss/webpack": "^0.22.0",
    "autoprefixer": "^10.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.2.3",
    "babel-preset-solid": "^1.3.4",
    "chalk": "^4.1.2",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.3.1",
    "ejs-loader": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-beautifier-webpack-plugin": "^1.0.6",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "image-minimizer-webpack-plugin": "^3.1.2",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.4.5",
    "ora": "^5.4.1",
    "portfinder": "^1.0.28",
    "postcss": "^8.4.5",
    "postcss-functions": "^4.0.2",
    "postcss-import": "^14.0.2",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-load-config": "^3.1.0",
    "postcss-loader": "^6.2.1",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-pxtorem": "^6.0.0",
    "postcss-rem-to-pixel": "^4.1.2",
    "postcss-simple-vars": "^6.0.3",
    "postcss-url": "^10.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "rimraf": "^3.0.2",
    "serve": "^12.0.1",
    "style-loader": "^3.3.1",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.1",
    "svgo": "^2.8.0",
    "svgo-loader": "^3.0.0",
    "tailwindcss": "^3.1.3",
    "terser-webpack-plugin": "^5.3.0",
    "unocss": "^0.22.0",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,svelte}": "eslint --ext",
    "**/*.{js,json,md,css,svelte}": [
      "prettier --write",
      "git add"
    ]
  }
}
