<%
  const header = require('@/components/header/header.ejs')
  const footer = require('@/components/footer/footer.ejs')
  const metaSocial = require('./meta-social.ejs')
  const title = 'Webpack MPA Starter'
  const description = 'Multiple page application starter for Webpack. Optionally used svelte.'
%>

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <meta name="description" content="<%= description %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= metaSocial({ title, description }) %>
    <link rel="icon" href="favicon.ico">
  </head>
  <body>
    <div class="app">
      <div class="app__inner">
        <%= header() %>
        <main class="main">
          <%= content %>
        </main>
        <%= footer() %>
      </div>
    </div>
  </body>
</html>
