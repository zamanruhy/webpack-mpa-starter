/* Layout */
.app {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

.main {
  flex: 1 0 auto;
}

.container {
  width: 100%;
  padding-right: var(--layout-padding);
  padding-left: var(--layout-padding);
  margin-left: auto;
  margin-right: auto;
  max-width: var(--layout-max-width);
}

